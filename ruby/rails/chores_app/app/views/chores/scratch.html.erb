<div class="container-lg container-fluid bg-light bg-gradient">

<p id="notice"><%= notice %></p>

<div class="row">

  <table class="table table-dark table-striped table-hover table-bordered">
      <thead>
        <tr class="table-secondary text-center">
        <th><strong>Name:</strong></th>
        <th><strong>Age:</strong></th>
        <th><strong>Job:</strong></th>
        </tr>
      </thead>

      <tbody>
        <tr class="text-center">
          <td><%= @child.name %></td>
          <td><%= @child.age %></td>
          <td><%= render partial: 'chores/convert', locals: { chore: @child.chore } %></td>
        </tr>
      </tbody>
  </table>

</div> <!--row-->

<div class= "col px-3 text-end">
  <%= link_to 'Edit', edit_child_path(@child) %> |
  <%= link_to 'Back', children_path %> |
  <%= link_to 'Chores', chores_path %>
</div>

</div><!--container-->