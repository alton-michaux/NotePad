<div class="row">
  <div class="mb-3">

    <%= form_for(chore) do |f| %>
      <% if chore.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(chore.errors.count, "error") %> prohibited this chore from being saved:</h2>

          <ul>
          <% chore.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-label">
        <%= f.label :child_id %>
      </div>
      <div class="form-control-sm">
        <%= f.select :child_id, options_for_select(Child.all.map { | child | [child.name, child.id]}) %>
      </div>

      <div class="form-label">
        <%= f.label :job %>
      </div>
      <div class="form-control-sm">
        <%= f.text_field :job %>
      </div>

      <div class="form-label">
        <%= f.label :description %>
      </div>
      <div class="form-control-sm">
        <%= f.text_field :description %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

  </div>
</div>
